{
  "name": "fratit",
  "version": "20220807",
  "description": "Framlin Postit",
  "main": "ui/electron/main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "jest --watchAll",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "watch": "nodemon --ignore 'data/pile.json' --exec electron-forge start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/framlin/fratit.git"
  },
  "keywords": [
    "note",
    "taker",
    "postit"
  ],
  "author": "Wolfgang Egger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/framlin/fratit/issues"
  },
  "homepage": "https://github.com/framlin/fratit#readme",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@tsconfig/node16": "^1.0.3",
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.0",
    "@types/uuid": "^8.3.4",
    "babel-jest": "^29.1.2",
    "electron": "^20.0.1",
    "jest-environment-jsdom": "^29.0.3",
    "nodemon": "^2.0.19",
    "jest": "^29.2.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fratit"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
