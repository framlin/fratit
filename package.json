{
  "name": "fratit",
  "version": "20220807",
  "description": "Framlin Postit",
  "main": "ui/electron/main.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "jest --watchAll",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "watch": "nodemon --ignore 'data/pile.json' --exec electron-forge start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/framlin/fratit.git"
  },
  "keywords": [
    "note",
    "taker",
    "postit"
  ],
  "author": "Wolfgang Egger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/framlin/fratit/issues"
  },
  "homepage": "https://github.com/framlin/fratit#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^20.0.1",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fratit"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
